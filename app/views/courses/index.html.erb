<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr class="headers">
      <th>Course number</th>
      <th>Course name</th>
      <th>Course description</th>
      <th>Course week date</th>
      <th>Course time</th>
      <th>Course room number</th>
      <th>Professor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= course.course_number %></td>
        <td><%= course.course_name %></td>
        <td class="list_description">
          <dl>
            <%= truncate(strip_tags(course.course_description), length:90) %>
          </dl>
        </td>
        <td><%= course.course_week_date %></td>
        <td><%= course.course_time %></td>
        <td><%= course.course_room_number %></td>
        <td><%= course.professor %></td>
        <td class="list_actions"> <%= link_to 'Show', course %>
                                  <%= link_to 'Edit', edit_course_path(course) %>
                                  <%= link_to 'Destroy', course, method: :delete,
                                              data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

