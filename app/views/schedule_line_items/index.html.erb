<p id="notice"><%= notice %></p>

<h1>Schedule Line Items</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Detail schedule</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedule_line_items.each do |schedule_line_item| %>
      <tr>
        <td><%= schedule_line_item.course %></td>
        <td><%= schedule_line_item.detail_schedule %></td>
        <td><%= link_to 'Show', schedule_line_item %></td>
        <td><%= link_to 'Edit', edit_schedule_line_item_path(schedule_line_item) %></td>
        <td><%= link_to 'Destroy', schedule_line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

